<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/fiveDpDimension"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
 <RelativeLayout
     android:layout_width="250dp"
     android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="250dp" android:layout_height="wrap_content"
    android:id="@+id/settings_dialog_header_group"
    android:background="@color/colorMainPrimary"
    >
    <TextView
        android:id="@+id/settings_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxWidth="@dimen/oneHunderedAndFiftyDpDimension"
        android:textSize="@dimen/seventeenSpDimension"
        android:textColor="@color/colorMainAccent"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="@dimen/twentyDpDimension"
        />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="250dp" android:layout_height="wrap_content"
            android:layout_below="@+id/settings_dialog_header_group"
            >

    <TextView
        android:id="@+id/settings_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textDarkGrey"
        android:textSize="@dimen/fifteenSpDimension"
        android:textAlignment="center"
        android:maxWidth="200dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="@dimen/fifteenDpDimension"
        android:layout_marginTop="@dimen/fifteenDpDimension"
        />
    <View
        android:id="@+id/settings_dialog_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/settings_dialog_message"
        android:layout_marginLeft="@dimen/thirtyDpDimension"
        android:layout_marginRight="@dimen/thirtyDpDimension"
        android:background="@color/textPrimaryColor"
        />

    <Button
        android:id="@+id/settings_dialog_negative_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_dialog_divider"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/tenDpDimension"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorMainPrimary"
        android:text="@string/settings_dialog_finger_negative_text"
        />
</RelativeLayout>
 </RelativeLayout>
</ScrollView>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_pollfish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_pollfish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textDarkGrey"
            android:textSize="@dimen/fifteenSpDimension"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:layout_marginBottom="@dimen/twentyDpDimension"
            android:text="@string/survey_pollfish_title"
            android:layout_marginLeft="@dimen/twentyDpDimension"
            android:layout_marginStart="@dimen/twentyDpDimension"
            />

        <include layout="@layout/seperator_settings"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_pollfish"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_offertoro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pollfish"
        >

        <TextView
            android:id="@+id/text_offertoro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:layout_marginBottom="@dimen/twentyDpDimension"
            android:layout_marginStart="@dimen/twentyDpDimension"
            android:layout_marginLeft="@dimen/twentyDpDimension"
            android:textSize="@dimen/fifteenSpDimension"
            android:textColor="@color/textDarkGrey"
            android:text="@string/survey_offertoro_title"
            />

        <include android:layout_height="wrap_content"
         layout="@layout/seperator_settings"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_offertoro"
        />

    </RelativeLayout>

</RelativeLayout>
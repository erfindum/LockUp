<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="248dp" android:layout_height="wrap_content"
    android:background="@drawable/img_permission_dialog_back" android:layout_gravity="center"

    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/should_start_app_lock_image"
        android:layout_width="@dimen/oneHunderedAndFiftyDpDimension"
        android:layout_height="@dimen/oneHunderedAndFiftyDpDimension"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="24dp"
        app:srcCompat="@drawable/ic_lock_usage_permission_icon"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/should_start_app_lock_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/should_start_app_lock_image"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelveSpDimension"
        android:text="@string/appLock_activity_should_start_dialog_info"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        />

    <TextView
        android:id="@+id/should_start_app_lock_positive_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/should_start_app_lock_info_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:layout_marginBottom="@dimen/tenDpDimension"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorMainPrimary"
        android:textColor="@color/colorMainAccent"
        android:text="@string/appLock_activity_should_start_dialog_permit"
        android:textSize="@dimen/twelveSpDimension"
        />

    <TextView
        android:id="@+id/should_start_app_lock_negative_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/should_start_app_lock_info_text"
        android:layout_toLeftOf="@+id/should_start_app_lock_positive_button"
        android:layout_toStartOf="@+id/should_start_app_lock_positive_button"
        android:padding="10dp"
        android:layout_marginBottom="@dimen/tenDpDimension"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorMainPrimary"
        android:textColor="@color/colorMainAccent"
        android:text="@string/appLock_activity_should_start_dialog_cancel"
        android:textSize="@dimen/twelveSpDimension"
        />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/media_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD IMAGES"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_margin="@dimen/twentyDpDimension"
        />

    <Button
        android:id="@+id/media_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_button1"
        android:text="LOAD VIDEO"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_margin="@dimen/twentyDpDimension"
        />

    <Button
        android:id="@+id/media_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_button2"
        android:text="LOAD AUDIO"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_margin="@dimen/twentyDpDimension"
        />

</RelativeLayout>
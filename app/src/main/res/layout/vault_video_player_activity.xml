<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/black"
    >

    <VideoView
        android:id="@+id/vault_video_player_activity_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/vault_video_player_activity_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparentBlack"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        >
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vault_video_player_activity_back_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_arrow_back_button"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:padding="@dimen/tenDpDimension"
            />
        <TextView
            android:id="@+id/vault_video_player_activity_original_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vault_video_player_activity_back_button"
            android:layout_toEndOf="@+id/vault_video_player_activity_back_button"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/twentySpDimension"
            android:layout_marginRight="@dimen/tenDpDimension"
            android:layout_marginEnd="@dimen/tenDpDimension"
            />
    </RelativeLayout>
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/vault_video_player_activity_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparentBlack"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        >
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vault_video_player_activity_play_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:background="@null"
            app:srcCompat="@drawable/ic_video_play"
            android:scaleType="fitXY"
            />
       <android.support.v7.widget.AppCompatImageButton
           android:id="@+id/vault_video_player_activity_previous_button"
           android:layout_width="56dp"
           android:layout_height="56dp"
           android:padding="@dimen/tenDpDimension"
           android:layout_marginRight="@dimen/twentyDpDimension"
           android:layout_marginEnd="@dimen/twentyDpDimension"
           android:background="@null"
           app:srcCompat="@drawable/ic_video_skip_previous"
           android:scaleType="fitXY"
           android:layout_toLeftOf="@+id/vault_video_player_activity_play_button"
           android:layout_toStartOf="@+id/vault_video_player_activity_play_button"
           />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vault_video_player_activity_next_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="@dimen/tenDpDimension"
            android:layout_marginLeft="@dimen/twentyDpDimension"
            android:layout_marginStart="@dimen/twentyDpDimension"
            android:background="@null"
            app:srcCompat="@drawable/ic_video_skip_next"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/vault_video_player_activity_play_button"
            android:layout_toEndOf="@+id/vault_video_player_activity_play_button"
            />
        <TextView
            android:id="@+id/vault_video_player_activity_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/fifteenSpDimension"
            android:textColor="@color/white"
            android:layout_below="@+id/vault_video_player_activity_play_button"
            android:padding="@dimen/fiveDpDimension"
            />

        <SeekBar
            android:id="@+id/vault_video_player_activity_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vault_video_player_activity_play_button"
            android:layout_toRightOf="@+id/vault_video_player_activity_duration_text"
            android:layout_toEndOf="@id/vault_video_player_activity_duration_text"
            android:padding="@dimen/fiveDpDimension"
            />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vault_video_player_activity_unlock"
            android:layout_width="@dimen/fiftySixDpDimension"
            android:layout_height="@dimen/fiftySixDpDimension"
            android:layout_toRightOf="@+id/vault_video_player_activity_play_button"
            android:layout_toEndOf="@+id/vault_video_player_activity_play_button"
            android:layout_marginLeft="@dimen/twentyDpDimension"
            android:layout_marginStart="@dimen/twentyDpDimension"
            android:layout_below="@+id/vault_video_player_activity_seek_bar"
            android:padding="@dimen/twelveDpDimesntion"
            android:background="@null"
            app:srcCompat="@drawable/ic_vault_unlock_white"
            android:scaleType="fitXY"
            />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vault_video_player_activity_delete_button"
            android:layout_width="@dimen/fiftySixDpDimension"
            android:layout_height="@dimen/fiftySixDpDimension"
            android:layout_toLeftOf="@+id/vault_video_player_activity_play_button"
            android:layout_toStartOf="@+id/vault_video_player_activity_play_button"
            android:layout_marginRight="@dimen/twentyDpDimension"
            android:layout_marginEnd="@dimen/twentyDpDimension"
            android:layout_below="@+id/vault_video_player_activity_seek_bar"
            android:padding="@dimen/tenDpDimension"
            android:background="@null"
            app:srcCompat="@drawable/ic_delete_button_white"
            android:scaleType="fitXY"
            />

    </RelativeLayout>


</RelativeLayout>
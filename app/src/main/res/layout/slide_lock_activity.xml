<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/main_screen_background"
    >

    <RelativeLayout
        android:id="@+id/parent_slide_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/img_btn_slide_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/fifteenDpDimension"
            android:layout_marginEnd="@dimen/fifteenDpDimension"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:padding="10dp"
            android:background="@drawable/ic_slide_settings"
            />

        <Button
            android:id="@+id/btn_slide_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/tenDpDimension"
            android:layout_marginEnd="@dimen/tenDpDimension"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:background="@color/slideLockText"
            android:text="TURN OFF"
            android:textSize="@dimen/fifteenSpDimension"
            android:padding="@dimen/tenDpDimension"
            android:textAlignment="center"
            android:textColor="@color/slideLockBottomText"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_slide_lock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fourtyDpDimension"
            android:textSize="60sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_slide_lock_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_slide_lock_time"
            android:layout_marginTop="@dimen/fifteenDpDimension"
            android:textSize="20sp"
            android:textColor="@color/slideLockText"
            />

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_slide_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:layout_below="@id/tv_slide_lock_date"
            app:adSize="MEDIUM_RECTANGLE"
            app:adUnitId="ca-app-pub-2878097117146801/3969369374"
            />

        <LinearLayout
            android:id="@+id/lay_slide_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/img_slide_arrow_one"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/tenDpDimension"
                android:src="@drawable/ic_slide"
                />
            <TextView
                android:id="@+id/tv_slide_info"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Slide To Open"
                android:textSize="28sp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textColor="@color/slideLockBottomText"
                android:layout_marginLeft="@dimen/tenDpDimension"
                android:layout_marginRight="@dimen/tenDpDimension"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
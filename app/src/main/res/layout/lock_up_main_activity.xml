        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/twentyDpDimension"
        android:textSize="@dimen/twentyFourSpDimension"
        android:textColor="@color/viewPagerTabBlue"
        android:text="@string/main_screen_activity_app_name_text"

        />

    <ImageButton
        android:id="@+id/lockup_main_activity_lock_button"
        android:layout_width="@dimen/main_activity_lock_icon_size"
        android:layout_height="@dimen/main_activity_lock_icon_size"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_main_screen_lock"
        android:layout_above="@+id/lockup_main_activity_applock_header"
        />

    <TextView
        android:id="@+id/lockup_main_activity_applock_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sixtyFiveDpDimension"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/lockup_main_activity_installed_group"
        android:textSize="@dimen/twentySpDimension"
        android:textColor="@color/mainScreenText"
        android:text="@string/main_screen_activity_lock_button_text"
        />

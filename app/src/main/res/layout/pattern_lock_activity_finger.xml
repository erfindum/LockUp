<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pattern_lock_activity_finger_parent_view"
    >
    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/pattern_lock_activity_finger_switch_keyboard"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/tenDpDimension"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="@dimen/fifteenDpDimension"
        android:paddingStart="@dimen/fifteenDpDimension"
        app:srcCompat="@drawable/ic_keyboard_white_24px"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/pattern_lock_activity_finger_switch_finger"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/tenDpDimension"
        android:paddingLeft="@dimen/fifteenDpDimension"
        android:paddingStart="@dimen/fifteenDpDimension"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_fingerprint_white_24px"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/pattern_lock_activity_finger_app_icon_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/pattern_lock_activity_finger_pattern_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/tenDpDimension"
        android:layout_marginTop="@dimen/tenDpDimension"
        />

    <com.smartfoxitsolutions.lockup.views.PatternLockView
        android:id="@+id/pattern_lock_activity_finger_pattern_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/fiftyDpDimension"
        android:paddingRight="@dimen/fiftyDpDimension"
        android:paddingTop="@dimen/thirtyDpDimension"
        android:paddingBottom="@dimen/twentyDpDimension"
        app:nodeCellSize="@dimen/seventyDpDimension"
        app:nodeCornerSize="3dp"
        app:nodeSelectedCornerSize="5dp"
        app:nodeColor="@array/nodeColors"
        app:nodeSelectedColor="@array/nodeSelectedColors"
        app:patternLineStroke="@dimen/sevenDpDimension"
        app:patternLineColor="@color/white"
        />
    <TextView
        android:id="@+id/pattern_lock_activity_finger_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/fifteenSpDimension"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/twentyDpDimension"
        android:layout_marginEnd="@dimen/twentyDpDimension"
        android:layout_marginLeft="@dimen/twentyDpDimension"
        android:layout_marginStart="@dimen/twentyDpDimension"
        android:visibility="invisible"
        android:textAlignment="center"
        android:maxLines="2"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/pattern_lock_activity_finger_image_main"
        android:layout_width="@dimen/oneHunderedDpDimension"
        android:layout_height="@dimen/oneHunderedDpDimension"
        android:layout_below="@+id/pattern_lock_activity_finger_app_icon_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/seventyFiveDpDimension"
        app:srcCompat="@drawable/ic_fingerprint_white_24px"
        android:visibility="invisible"
        android:scaleType="fitXY"
        />
</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="248dp" android:layout_height="wrap_content"
    android:background="@drawable/img_permission_dialog_back" android:layout_gravity="center"

    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/recommended_alert_image"
        android:layout_width="@dimen/oneHunderedAndFiftyDpDimension"
        android:layout_height="@dimen/oneHunderedAndFiftyDpDimension"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="24dp"
        app:srcCompat="@drawable/ic_app_lock_activity_alert"
        />

    <TextView
        android:id="@+id/recommended_alert_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommended_alert_image"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/twelveSpDimension"
        android:text="@string/recommended_unlock_alert_text"
        android:maxWidth="200dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        />

    <TextView
        android:id="@+id/recommended_alert_positive_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/recommended_alert_info_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginBottom="@dimen/tenDpDimension"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorMainPrimary"
        android:textColor="@color/colorMainAccent"
        android:text="@string/recommended_unlock_alert_dialog_positive_text"
        android:textSize="@dimen/twelveSpDimension"
        />

    <TextView
        android:id="@+id/recommended_alert_negative_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/recommended_alert_info_text"
        android:layout_toLeftOf="@+id/recommended_alert_positive_button"
        android:layout_toStartOf="@+id/recommended_alert_positive_button"
        android:padding="10dp"
        android:layout_marginBottom="@dimen/tenDpDimension"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorMainPrimary"
        android:textColor="@color/colorMainAccent"
        android:text="@string/recommended_unlock_alert_dialog_negative_text"
        android:textSize="@dimen/twelveSpDimension"
        />


</RelativeLayout>
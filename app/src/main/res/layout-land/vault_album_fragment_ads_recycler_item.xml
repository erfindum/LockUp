<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="165dp"
    android:layout_marginTop="@dimen/tenDpDimension"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    app:cardCornerRadius="@dimen/threeDpDimension"
    app:cardElevation="@dimen/threeDpDimension"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="@dimen/fiveDpDimension"
        android:layout_marginBottom="@dimen/fiveDpDimension"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/vault_album_picker_ads_recycler_item_placeholder"
            android:layout_width="@dimen/fiftyDpDimension"
            android:layout_height="@dimen/fiftyDpDimension"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/twoDpDimension"
            app:srcCompat="@drawable/ic_vault_ads_placeholder"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
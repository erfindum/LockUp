<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/vault_image_view_activity_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/vault_image_view_activity_top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/transparentBlue"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        >
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vault_image_view_activity_back_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_arrow_back_button"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:padding="@dimen/tenDpDimension"
            />
        <TextView
            android:id="@+id/vault_image_view_activity_original_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vault_image_view_activity_back_button"
            android:layout_toEndOf="@+id/vault_image_view_activity_back_button"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/twentySpDimension"
            android:layout_marginRight="@dimen/tenDpDimension"
            android:layout_marginEnd="@dimen/tenDpDimension"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vault_image_view_activity_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/transparentBlue"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        >
        <View
            android:id="@+id/vault_image_view_activity_icon_separator"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vault_image_view_activity_unlock"
            android:layout_width="@dimen/fiftySixDpDimension"
            android:layout_height="@dimen/fiftySixDpDimension"
            android:layout_toRightOf="@+id/vault_image_view_activity_icon_separator"
            android:layout_toEndOf="@+id/vault_image_view_activity_icon_separator"
            android:layout_marginLeft="@dimen/twentyDpDimension"
            android:layout_marginStart="@dimen/twentyDpDimension"
            android:padding="@dimen/twelveDpDimesntion"
            android:background="@null"
            app:srcCompat="@drawable/ic_vault_unlock_white"
            android:scaleType="fitXY"
            />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vault_image_view_activity_delete_button"
            android:layout_width="@dimen/fiftySixDpDimension"
            android:layout_height="@dimen/fiftySixDpDimension"
            android:layout_toLeftOf="@+id/vault_image_view_activity_icon_separator"
            android:layout_toStartOf="@+id/vault_image_view_activity_icon_separator"
            android:layout_marginRight="@dimen/twentyDpDimension"
            android:layout_marginEnd="@dimen/twentyDpDimension"
            android:padding="@dimen/tenDpDimension"
            android:background="@null"
            app:srcCompat="@drawable/ic_delete_button_white"
            android:scaleType="fitXY"
            />

     </RelativeLayout>

</RelativeLayout>
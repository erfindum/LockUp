<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="@dimen/tenDpDimension"
    android:layout_marginEnd="@dimen/tenDpDimension"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    android:background="@color/white"
    android:layout_marginBottom="-7dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/notification_item_app_icon_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/fifteenDpDimension"
        android:layout_marginLeft="@dimen/fifteenDpDimension"
        android:layout_marginStart="@dimen/fifteenDpDimension"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/img_pin_normal"
        android:scaleType="fitCenter"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/notification_item_app_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/notification_item_app_icon_imageView"
        android:layout_toEndOf="@+id/notification_item_app_icon_imageView"
        android:layout_marginLeft="@dimen/fifteenDpDimension"
        android:layout_marginStart="@dimen/fifteenDpDimension"
        android:textSize="@dimen/fifteenSpDimension"
        android:maxLength="40"
        android:textColor="@color/textDarkGrey"
        />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/notification_item_lock_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/fifteenDpDimension"
        android:layout_marginEnd="@dimen/fifteenDpDimension"
        android:layout_marginTop="@dimen/fifteenDpDimension"
        android:layout_marginStart="@dimen/tenDpDimension"
        android:layout_marginLeft="@dimen/tenDpDimension"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_app_lock_activity_hide_notif"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />
</RelativeLayout>

</android.support.v7.widget.CardView>
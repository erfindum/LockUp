<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundGrey">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <include
            android:id="@+id/loyalty_bonus_password_recovery_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar_layout"
            android:layout_alignParentTop="true"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/loyalty_bonus_password_recovery_send_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tenDpDimension"
            android:layout_below="@+id/loyalty_bonus_password_recovery_tool_bar"
            app:cardCornerRadius="@dimen/threeDpDimension"
            >
            <RelativeLayout
                android:id="@+id/loyalty_bonus_password_recovery_send_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/loyalty_bonus_password_recovery_send_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/tenDpDimension"
                    android:textSize="@dimen/thirteenSpDimension"
                    android:textColor="@color/textDarkGrey"
                    android:text="@string/loyalty_password_recovery_step_one_info"
                    />
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/loyalty_bonus_password_recovery_send_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loyalty_bonus_password_recovery_send_info"
                    android:padding="@dimen/twentyDpDimension"
                    android:textSize="@dimen/thirteenSpDimension"
                    android:textColor="@color/colorMainPrimary"
                    android:hint="@string/loyalty_password_recovery_enter_email_hint"
                    android:textColorHint="@color/textDarkGrey"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    />

                <TextView
                    android:id="@+id/loyalty_bonus_password_recovery_send_button"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@+id/loyalty_bonus_password_recovery_send_email"
                    android:padding="10dp"
                    android:layout_marginBottom="@dimen/fifteenDpDimension"
                    android:layout_marginTop="@dimen/tenDpDimension"
                    android:gravity="center"
                    android:textColor="@color/colorMainPrimary"
                    android:textSize="@dimen/fifteenSpDimension"
                    android:text="@string/reset_pin_pattern_send_text"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/loyalty_bonus_password_recovery_reset_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tenDpDimension"
            android:layout_below="@+id/loyalty_bonus_password_recovery_send_card"
            app:cardCornerRadius="@dimen/threeDpDimension"
            >
            <RelativeLayout
                android:id="@+id/loyalty_bonus_password_recovery_reset_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/loyalty_bonus_password_recovery_reset_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/tenDpDimension"
                    android:textSize="@dimen/thirteenSpDimension"
                    android:textColor="@color/textDarkGrey"
                    android:text="@string/loyalty_password_recovery_step_two_info"
                    />
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/loyalty_bonus_password_recovery_reset_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loyalty_bonus_password_recovery_reset_info"
                    android:layout_margin="@dimen/tenDpDimension"
                    android:padding="@dimen/tenDpDimension"
                    android:textSize="@dimen/thirteenSpDimension"
                    android:textColor="@color/colorMainPrimary"
                    android:hint="@string/reset_pin_pattern_reset_hint"
                    android:textColorHint="@color/textDarkGrey"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/loyalty_bonus_password_recovery_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loyalty_bonus_password_recovery_reset_edit"
                    android:padding="@dimen/tenDpDimension"
                    android:layout_margin="@dimen/tenDpDimension"
                    android:textSize="@dimen/thirteenSpDimension"
                    android:textColor="@color/colorMainPrimary"
                    android:hint="@string/loyalty_password_reset_one_hint"
                    android:textColorHint="@color/textDarkGrey"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="textWebPassword"
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/loyalty_bonus_password_recovery_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loyalty_bonus_password_recovery_one"
                    android:padding="@dimen/tenDpDimension"
                    android:layout_margin="@dimen/tenDpDimension"
                    android:textSize="@dimen/thirteenSpDimension"
                    android:textColor="@color/colorMainPrimary"
                    android:hint="@string/loyalty_password_reset_two_hint"
                    android:textColorHint="@color/textDarkGrey"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:inputType="textWebPassword"
                    />
                <TextView
                    android:id="@+id/loyalty_bonus_password_recovery_reset_button"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@+id/loyalty_bonus_password_recovery_two"
                    android:padding="10dp"
                    android:layout_marginBottom="@dimen/fifteenDpDimension"
                    android:gravity="center"
                    android:textColor="@color/colorMainPrimary"
                    android:textSize="@dimen/fifteenSpDimension"
                    android:text="@string/loyalty_password_recovery_reset_text"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</ScrollView>
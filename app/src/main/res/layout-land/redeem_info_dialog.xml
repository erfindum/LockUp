<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/fiveDpDimension"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="250dp" android:layout_height="wrap_content"
                android:id="@+id/redeem_dialog_header_group"
                android:background="@color/colorMainPrimary"
                >
                <TextView
                    android:id="@+id/redeem_dialog_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:maxWidth="@dimen/oneHunderedAndFiftyDpDimension"
                    android:textSize="@dimen/seventeenSpDimension"
                    android:textColor="@color/colorMainAccent"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="12dp"
                    android:layout_marginTop="@dimen/twentyDpDimension"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="250dp" android:layout_height="wrap_content"
                android:layout_below="@+id/redeem_dialog_header_group"
                >

                <TextView
                    android:id="@+id/redeem_dialog_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textDarkGrey"
                    android:textSize="@dimen/fifteenSpDimension"
                    android:textAlignment="center"
                    android:maxWidth="200dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="@dimen/fifteenDpDimension"
                    android:layout_marginTop="@dimen/fifteenDpDimension"
                    />
                <View
                    android:id="@+id/redeem_dialog_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/redeem_dialog_message"
                    android:layout_marginLeft="@dimen/thirtyDpDimension"
                    android:layout_marginRight="@dimen/thirtyDpDimension"
                    android:background="@color/textPrimaryColor"
                    />

                <TextView
                    android:id="@+id/redeem_dialog_positive_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/redeem_dialog_divider"
                    android:paddingTop="@dimen/tenDpDimension"
                    android:paddingBottom="@dimen/twentyDpDimension"
                    android:padding="@dimen/tenDpDimension"
                    android:layout_marginRight="@dimen/fifteenDpDimension"
                    android:layout_marginEnd="@dimen/fifteenDpDimension"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorMainPrimary"
                    android:textSize="@dimen/fifteenSpDimension"
                    android:text="@string/loyalty_redeem_dialog_positive_text"
                    />
                <TextView
                    android:id="@+id/redeem_dialog_negative_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/redeem_dialog_divider"
                    android:paddingTop="@dimen/tenDpDimension"
                    android:paddingBottom="@dimen/twentyDpDimension"
                    android:padding="@dimen/tenDpDimension"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@+id/redeem_dialog_positive_button"
                    android:layout_toStartOf="@+id/redeem_dialog_positive_button"
                    android:textColor="@color/colorMainPrimary"
                    android:textSize="@dimen/fifteenSpDimension"
                    android:text="@string/loyalty_redeem_dialog_negative_text"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>